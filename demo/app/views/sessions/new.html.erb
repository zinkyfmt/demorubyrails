<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>
<div>
  <% if flash[:alert] %>
  <p id="notice"> <%= flash[:alert] %> </p>
  <% end %>
  <%= form_tag do %>
  <fieldset>
    <legend> Please Log In </legend>
    <div>
      <%= label_tag :name, 'Name' %>
      <%= text_field_tag :name, params[:name] %>
      <%= label_tag :password, 'Password' %>

      <%= text_field_tag :password, params[:password] %>
    </div>
    <div>
      <%= submit_tag 'Login' %>
    </div>
  </fieldset>
  <% end %>
</div>
